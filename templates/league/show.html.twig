{% extends 'base.html.twig' %}

{% block title %}League{% endblock %}

{% block body %}
    <h1>League</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ league.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ league.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ league.description }}</td>
            </tr>
            <tr>
                <th>Pool</th>
                <td>{{ league.pool }}</td>
            </tr>
            <tr>
                <th>Create_at</th>
                <td>{{ league.createAt ? league.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ league.updatedAt ? league.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Expiration_date</th>
                <td>{{ league.expirationDate ? league.expirationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_league_index') }}">back to list</a>

    <a href="{{ path('app_league_edit', {'id': league.id}) }}">edit</a>

    {{ include('league/_delete_form.html.twig') }}
{% endblock %}
