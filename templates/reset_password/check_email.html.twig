{% extends 'base.no-nav.html.twig' %}

{% block title %}Password Reset Email Sent!
{% endblock %}

{% block body %}
	<div class="card">
		<div class="card-body">
			<h1 class="h2">On it's way!</h1>
			<p>
				An email with a link to reset your password has been sent, please check your email account and follow the instructions.
			</p>
			<p>
				<strong>For security reasons, the link will expire in
					{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.</strong>
			</p>
			<p>
				If you don't receive an email please check your spam folder or
				<a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
		</div>
	</div>
{% endblock %}
